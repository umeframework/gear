    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="gear.logging" level="all">
            <AppenderRef ref="FILE"/>
        </Logger>
    </Loggers>
</Configuration>
